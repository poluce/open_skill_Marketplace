{
  "name": "skill-marketplace",
  "displayName": "技能市场",
  "description": "通用 Agent 技能的发现、安装与管理工具。",
  "version": "0.2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/poluce/open_skill_Marketplace.git"
  },
  "publisher": "poluce",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "antigravity-marketplace",
          "title": "技能市场",
          "icon": "resources/marketplace.svg"
        }
      ]
    },
    "views": {
      "antigravity-marketplace": [
        {
          "type": "webview",
          "id": "skill-marketplace.views.sidebar",
          "name": "技能市场",
          "icon": "resources/marketplace.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "skill-marketplace.openMarketplace",
        "title": "打开技能市场"
      }
    ],
    "configuration": {
      "title": "技能市场",
      "properties": {
        "antigravity.agentType": {
          "type": "string",
          "enum": [
            "antigravity",
            "claude",
            "codex",
            "opencode"
          ],
          "enumDescriptions": [
            "Antigravity (Gemini)",
            "Claude Code CLI",
            "Codex CLI",
            "Open Code"
          ],
          "default": "antigravity",
          "description": "目标 Agent 类型"
        },
        "antigravity.installScope": {
          "type": "string",
          "enum": [
            "global",
            "project"
          ],
          "enumDescriptions": [
            "安装到 Agent 的全局技能目录",
            "安装到当前工作区的 Agent 技能目录"
          ],
          "default": "global",
          "description": "技能安装范围"
        },
        "antigravity.skillsPath": {
          "type": "string",
          "default": "",
          "description": "自定义技能目录路径（覆盖默认路径）"
        },
        "antigravity.accentColor": {
          "type": "string",
          "default": "#8A2BE2",
          "description": "技能市场界面的强调色（支持 CSS 颜色值，如 #8A2BE2, rgba(0,0,0,1) 等）。"
        },
        "antigravity.githubToken": {
          "type": "string",
          "default": "",
          "description": "GitHub 个人访问令牌 (PAT)。配置后可将请求频率限制从 60次/小时 提升至 5000次/小时。"
        },
        "antigravity.deepseekApiKey": {
          "type": "string",
          "default": "",
          "description": "DeepSeek API Key，用于自动翻译技能描述为中文。"
        },
        "antigravity.language": {
          "type": "string",
          "enum": [
            "",
            "zh-CN"
          ],
          "default": "",
          "description": "技能市场显示语言（为空则显示原文，zh-CN 则自动翻译为中文）。"
        },
        "antigravity.showAiCategories": {
          "type": "boolean",
          "default": true,
          "description": "是否在界面中显示 AI 自动识别的分类（编程、办公等）。"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.90.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.52.0",
    "eslint": "^9.39.2",
    "esbuild": "^0.27.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}